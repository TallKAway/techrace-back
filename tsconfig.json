{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"], 
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "*.ts",
    "config/**/*.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "models/**/*.ts",
    "prisma/**/*.ts",
    "repository/**/*.ts",
    "router/**/*.ts",
    "service/**/*.ts",
    "utils/**/*.ts",
    "__test__/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
